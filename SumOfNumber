# SumOfNumber
import java.io.*;
import java.util.*;
public class SumOfNumber
{ 
   public static void main(String args[])
   {
     int sum=0;
     int n=0;
     Scanner sc=new Scanner(System.in);
     n=sc.nextInt();
     for(int i=1;i<=n;i++)
     {
       sum=sum+i;
     }
     System.out.println("The Sum of "+n+" Numbers are:"+sum);
     }
     }
